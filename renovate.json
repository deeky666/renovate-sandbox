{
    "extends": ["config:base"],
    "packageRules": [
        {
            "matchManagers": ["dockerfile", "docker-compose"],
            "enabled": false
        },
        {
            "matchUpdateTypes": ["minor"],
            "enabled": false
        },
        {
            "matchUpdateTypes": ["major"],
            "enabled": false
        },
        {
            "matchUpdateTypes": ["patch"],
            "enabled": false
        },
        {
            "matchFileNames": ["frontend/package.json"],
            "matchPackageNames": ["eslint"],
            "matchUpdateTypes": ["patch"],
            "labels": ["patch"],
            "automerge": false,
            "enabled": true
        }
    ],
    "separateMinorPatch": true,
    "lockFileMaintenance": {
        "enabled": true
    },
    "labels": ["dependencies"],
    "constraints": {
        "composer": "2.7.7"
    },
    "rangeStrategy": "pin",
    "dependencyDashboard": true,
    "baseBranches": ["test-5"]
}
