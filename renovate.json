{
    "extends": ["config:base"],
    "packageRules": [
        {
            "matchManagers": ["dockerfile", "docker-compose"],
            "enabled": false
        },
        {
            "matchUpdateTypes": ["minor"],
            "enabled": false
        },
        {
            "matchUpdateTypes": ["major"],
            "enabled": false
        },
        {
            "matchFileNames": ["frontend/package.json"],
            "allowedVersions": "/^\\d+\\.\\d+\\.\\d+$/",
            "labels": ["patch"],
            "rangeStrategy": "pin",
            "automerge": false
        }
    ],
    "separateMinorPatch": true,
    "labels": ["dependencies"],
    "constraints": {
        "composer": "2.7.7"
    },
    "ignorePaths": ["**"],
    "dependencyDashboard": true,
    "baseBranches": ["test-3"]
}
