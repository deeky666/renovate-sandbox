{
    "extends": ["config:base", "mergeConfidence:all-badges"],
    "packageRules": [
        {
            "matchManagers": ["dockerfile", "docker-compose"],
            "dependencyDashboardApproval": true
        },
        {
            "matchManagers": ["nuget"],
            "dependencyDashboardCategory": "nuget"
        },
        {
            "matchUpdateTypes": ["minor"],
            "dependencyDashboardApproval": true
        },
        {
            "matchUpdateTypes": ["major"],
            "dependencyDashboardApproval": true
        },
        {
            "matchUpdateTypes": ["patch"],
            "automerge": true,
            "minimumReleaseAge": "7 days"
        },
        {
            "matchDatasources": ["docker"],
            "matchUpdateTypes": ["minor", "major"],
            "matchDepNames": ["php"],
            "enabled": false
        },
        {
            "matchDepNames": ["php"],
            "matchUpdateTypes": ["patch"],
            "minimumGroupSize": 2
        },
        {
            "description": "Wir m체ssen die dotnet-tools deaktivieren, da diese f체r Pinning-Probleme sorgen. Da DotNet Tools keine produktive Relevanz hat, haben wir uns darauf verst채ndigt die Updates manuell nach Notwendigkeit durchzuf체hren.",
            "matchManagers": ["nuget"],
            "matchCurrentValue": "/^\\[[^,]+\\]$/",
            "matchFileNames": ["**/dotnet-tools.json"],
            "enabled": false
        }
    ],
    "docker": {
        "pinDigests": true
    },
    "docker-compose": {
        "pinDigests": true
    },
    "separateMinorPatch": true,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": ["before 1am every day"]
    },
    "vulnerabilityAlerts": {
        "labels": ["security"],
        "assignees": ["@jan.ruhfus", "@steve.falk"],
        "automerge": true
    },
    "labels": ["dependencies"],
    "constraints": {
        "composer": "2.8.4",
        "@types/node": "node"
    },
    "rangeStrategy": "pin",
    "dependencyDashboard": true,
    "dependencyDashboardOSVVulnerabilitySummary": "all",
    "baseBranches": ["test-6"],
    "minimumReleaseAge": "30 days",
    "branchPrefix": "renovate-",
    "branchNameStrict": true
}
